                <td><img src="<%= APP_CONFIG["application_base_url"] %><%= ApplicationHelper.public_data_url(:campaign_image, @data["hash_id"]) %>" width="505"/></td>
              </tr>
            </table>
          </td>
          <td valign="top" style="vertical-align:top">
            <table width="250" height="350" style="border-collapse:collapse;border-spacing:0;margin-left:12px;width:250px;height:350px;background-color:#01aef2;">
