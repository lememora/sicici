          <td width="700" style="width:773px;">
            <a href="<%= j["url"].match(/^http/) ? j["url"] : "#{APP_CONFIG["website_base_url"]}/#{j["url"]}" %>" style="text-decoration:none" target="_blank">
            <span style="color:#00b9ec;font:13px arial,verdana,tahoma,sans-serif;font-weight:bold;"><%= j["title"] %></span><br/>
            <span style="color:black;font:11px arial,verdana,tahoma,sans-serif;"><%= j["description"] %></span>
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
